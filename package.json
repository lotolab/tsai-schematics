{
  "name": "@tsailab/schematics",
  "version": "1.0.9",
  "description": "Tsai - modern, fast, powerful node.js web framework (@tsailab/schematics)",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postbuild": "npm run copy:collection && npm run copy:lib",
    "build": "rm -rf dist && tsc --project tsconfig.lib.json",
    "clean": "gulp clean:src",
    "clean:all": "gulp clean:all",
    "copy:collection": "cpx src/collection.json dist && cpx \"src/lib/**/schema.json\" dist/lib",
    "copy:lib": "cpx \"src/lib/**/{files,workspace}/**/*\" dist/lib && cpx \"src/lib/**/{files,workspace}/**/.!(gitignore)\" dist/lib",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "unpublish": "npm -f unpublish",
    "test": "npm run clean && NODE_ENV=test jest -w 1 --no-cache --config jest.json",
    "test:dev": "cross-env NODE_ENV=test npm run -s test -- --watchAll",
    "prerelease": "npm run build",
    "release": "release-it",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lotolab/tsai-schematics.git"
  },
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lotolab/tsai-schematics/issues"
  },
  "homepage": "https://github.com/lotolab/tsai-schematics#readme",
  "dependencies": {
    "@angular-devkit/core": "17.3.11",
    "comment-json": "4.2.5",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "3.3.1",
    "pluralize": "8.0.0"
  },
  "devDependencies": {
    "@angular-devkit/schematics": "^19.0.2",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-angular": "19.6.0",
    "@types/jest": "29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "22.10.1",
    "@typescript-eslint/eslint-plugin": "8.16.0",
    "@typescript-eslint/parser": "8.16.0",
    "cpx2": "8.0.0",
    "cross-env": "^7.0.3",
    "del": "^8.0.0",
    "eslint": "9.15.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "gulp": "5.0.0",
    "gulp-clean": "0.4.0",
    "gulp-run-command": "^0.0.10",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "nyc": "17.1.0",
    "release-it": "17.10.0",
    "rimraf": "^6.0.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "peerDependencies": {
    "typescript": ">=4.8.2"
  },
  "schematics": "./dist/collection.json",
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "lint-staged": {
    "**/*.{ts,json}": []
  }
}
